        @keyframes gradient-shift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        /* New: Logo Pulsating Glow Effect */
        .logo-glow-pulse {
            position: relative;
            display: inline-block;
        }

        .logo-glow-pulse::before {
            content: '';
            position: absolute;
            top: -10px;
            left: -20px;
            right: -20px;
            bottom: -10px;
            border-radius: 9999px;
            background: rgba(59, 130, 246, 0.6); /* Stronger blue glow */
            filter: blur(15px);
            z-index: -1;
            animation: pulse-border 4s infinite cubic-bezier(0.4, 0, 0.2, 1);
        }

        @keyframes pulse-border {
            0%, 100% {
                transform: scale(1);
                opacity: 0.1;
            }
            50% {
                transform: scale(1.05);
                opacity: 0.4;
            }
        }
        
        /* New: Product Image Neon Pulse */

            transition: all 0.5s;
            /* Initial glow styling */
            box-shadow: 0 0 50px rgba(59, 130, 246, 0.5), 0 0 10px rgba(59, 130, 246, 0.3);
            animation: neon-pulse 3s infinite alternate;
        }

        @keyframes neon-pulse {
            0% {
                box-shadow: 0 0 50px rgba(59, 130, 246, 0.5), 0 0 10px rgba(59, 130, 246, 0.3);
                transform: scale(1);
            }
            100% {
                box-shadow: 0 0 70px rgba(59, 130, 246, 0.8), 0 0 20px rgba(59, 130, 246, 0.5);
                transform: scale(1.01);
            }
        }
        
        /* New: Slogan Text Pulse Effect */

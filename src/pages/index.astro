        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3), 0 4px 6px -4px rgba(59, 130, 246, 0.2);
            border-color: #3b82f6;
            animation-play-state: paused; /* Pause float on hover */
        }

        /* New: Navigation Link Underline Glow */
        .nav-link-glow {
            position: relative;
        }
        .nav-link-glow::after {
            content: '';
            position: absolute;
            bottom: -5px;
